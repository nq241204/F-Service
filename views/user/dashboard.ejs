<%- include('../partials/header') %>
<h2>Dashboard Người dùng - Xin chào, <%= user.email %></h2>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <div class="card p-3 text-center">
        <h5>Số dư ví</h5>
        <h3><%= user.balance.toLocaleString() %> VNĐ</h3>
        <a href="/user/wallet" class="btn btn-primary">Nạp tiền</a>
      </div>
    </div>
  </div>

  <h3 class="mt-4">Yêu cầu của bạn</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Tiêu đề</th>
        <th>Trạng thái</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(s => { %>
        <tr>
          <td><%= s.title %></td>
          <td><%= s.status %></td>
          <td>
            <% if (s.status === 'pending') { %>
              <a href="/user/select-member/<%= s._id %>" class="btn btn-sm btn-info">Chọn người</a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/user/request" class="btn btn-success">Tạo yêu cầu mới</a>
</div>
<%- include('../partials/footer') %>